<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:background="@color/light_primary_dark"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_header"
        />

    <ImageView
        android:id="@+id/nav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="36dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/nav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nav_icon"

        android:layout_marginStart="@dimen/nav_header_text_margin_left"
        android:layout_marginTop="@dimen/nav_header_text_margin_top"
        android:layout_toRightOf="@+id/nav_icon"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/nav_title"
        android:layout_below="@+id/nav_title"
        android:alpha="0.5"
        android:text="Status: Enabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

</RelativeLayout>

